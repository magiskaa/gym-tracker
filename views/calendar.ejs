<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=0.8, user-scalable=no">
    <title>Gym Tracker</title>
    <link rel="stylesheet" href="/styles.css?v=20250806">
</head>
<body>
    <h1>Gym Tracker</h1>
    
    <div class="nav">
        <a href="/">💪 Workouts</a>
        <a href="/calendar">📅 Calendar</a>
        <a href="/exercises">🏋️ Exercises</a>
    </div>
    
    <h2>📅 Workout Calendar</h2>
    <div class="calendar-container">
        <div class="calendar-header">
            <button class="calendar-button" onclick="changeMonth(-1)">‹ Previous</button>
            <h3 id="current-month"></h3>
            <button class="calendar-button" onclick="changeMonth(1)">Next ›</button>
        </div>
        <div class="calendar" id="calendar"></div>
    </div>
    
    <h2>Your Workouts</h2>
    <% if (workouts.length === 0) { %>
        <p>No workouts logged yet. Add your first workout above!</p>
    <% } else { %>
        <% workouts.slice().reverse().forEach(workout => { %>
            <div class="workout">
                <strong><%= workout.name %></strong><br>
                ⏱️Duration: <%= workout.duration %><br>
                🏋️Exercises:
                <br>
                <% workout.exercises.forEach((ex, i) => { %>
                    <strong><%= `${i + 1}. ${ex.name}` %></strong>
                    <br>
                <% }) %>
                <small>📅Date: <%= workout.date %></small>
            </div>
        <% }); %>
    <% } %>

    <script src="/scripts.js?v=20250806"></script>
    <script type="application/json" id="workout-data"><%- JSON.stringify(workouts) %></script>
</body>
</html>