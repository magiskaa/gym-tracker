<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=0.8, user-scalable=no">
    <link rel="stylesheet" href="/styles.css">
    <link rel="apple-touch-icon" href="/icons/apple-touch-icon-180.png">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <title>Gym Tracker</title>
    <link rel="icon" type="image/png" sizes="192x192" href="/icons/icon-192.png">
</head>
<body id="workouts-body">
    
    <div class="header-div">
        <div class="nav-div">
            <img src="/icons/icon-512.png" alt="logo">
            <a href="/">Workouts</a>
            <a href="/exercises">Exercises</a>
            <a href="/calendar">Calendar</a>
        </div>
    </div>
    
    <div id="preset-workouts-div">
        <% presetWorkoutsData.forEach(workout => { %>
            <div class="preset-workout">
                <h3><%= workout.name; %></h3>
                <div>
                    <% for (const [index, exercise] of workout.exercises.entries()) { %>
                        <% const ex = exercisesData[exercise]; %>
                        <p><%= `${index+1}. ` + ex.name; %></p>
                    <% } %>
                </div>
                <div class="preset-workout-buttons">
                    <button data-workout='<%- JSON.stringify(workout) %>' 
                            onclick="startPresetWorkout(JSON.parse(this.getAttribute('data-workout')))" 
                            class="start-workout-button">Start</button>
                    <button data-workout='<%- JSON.stringify(workout) %>'
                            onclick="editPresetWorkout(JSON.parse(this.getAttribute('data-workout')))"
                            class="edit-workout-button">Edit</button>
                </div>
            </div>
        <% }); %>
    </div>

    <div id="custom-workout-div">
        <h2>Custom workout</h2>
        <div id="custom-workout-buttons">
            <button id="custom-workout-start-button" 
                    class="start-workout-button"
                    onclick="startCustomWorkout()">Start</button>
            <button id="custom-workout-add-exercise-button">Add exercise</button>
        </div>
    </div>

    <div class="blurred-background">
        <div id="workout-in-progress-div">
            <h2>Workout in progress</h2>
            <form id="log-workout-form" action="/log-workout" method="POST">
                <fieldset class="exercises-fieldset"></fieldset>
                <div id="workout-in-progress-buttons">
                    <button type="submit">End</button>
                    <button type="button" onclick="cancelWorkout()">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <div class="blurred-background">
        <div id="edit-workout-div">
            <h2>Edit preset workout</h2>
            <form id="edit-workout-form" action="/edit-workout" method="POST">
                <fieldset class="exercises-fieldset"></fieldset>
                <div id="edit-workout-buttons">
                    <button type="submit">Save</button>
                    <button type="button" onclick="cancelEdit()">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <script src="/scripts.js" defer></script>
    <script type="application/json" id="preset-workouts-data"><%- JSON.stringify(presetWorkoutsData) %></script>
    <script type="application/json" id="completed-workouts-data"><%- JSON.stringify(completedWorkoutsData) %></script>
    <script type="application/json" id="categories-data"><%- JSON.stringify(categoriesData) %></script>
    <script type="application/json" id="exercises-data"><%- JSON.stringify(exercisesData) %></script>
</body>
</html>