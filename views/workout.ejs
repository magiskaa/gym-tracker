<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=0.8, user-scalable=no">
    <title>Gym Tracker</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Gym Tracker</h1>
            
    <h2>Workout in Progress</h2>
    <div id="timer">00:00:00</div>
    <form action="/end-workout" method="POST">
        <% submittedExercises.forEach((ex, i) => { %>
            <div class="workout-exercise-entry">
                <strong id="workout-exercise-name"><%= ex %>:</strong>
                <br>
                <input type="number" name="sets-<%= i %>" placeholder="Sets" required>
                <input type="number" name="reps-<%= i %>" placeholder="Reps" required>
                <input type="number" name="weight-<%= i %>" placeholder="Weight (kg)" step="0.5">
                <input type="hidden" name="exercise-<%= i %>" value="<%= ex %>">
                <input type="hidden" name="duration" id="duration-field"> 
            </div>
        <% }) %>
        <button type="submit" id="end-workout-button">End Workout</button>
    </form>

    <form action="/delete-workout" method="POST">
        <button type="submit" id="delete-workout-button">Delete Workout</button>
    </form>
        
    <script src="/scripts.js"></script>
    <script type="application/json" id="workout-data"><%- JSON.stringify(workouts) %></script>
    <script type="application/json" id="exercise-data"><%- JSON.stringify(exercises) %></script>
    <script type="application/json" id="submitted-exercises"><%- JSON.stringify(submittedExercises) %></script>
</body>
</html>